									<input name="nome" id="nome" type="text" size="75" maxlength="255" value="${cliente.nome}">
									<input name="id" id="id" type="hidden" value="^${cliente.id}">
								</td>
							</tr>
							<tr>
								<td width="25%">
									<label for="telefone">
										Telefone:&nbsp;(00000-0000)
									</label>
								</td>
								<td>
									<input name="telefone" 
										   id="telefone" 
										   type="text" 
										   size="16" 
										   value="${cliente.telefone}">
								</td>
								<td width="25%">
									<label for="email">
										Email:
									</label>
								</td>
								<td>
									<input name="email" 
									       id="email" 
									       type="email" 
									       size="16" 
									       value="${cliente.email}">
								</td>
							</tr>
							<tr>
								<td colspan="4">
									<input type="button"
										   onlick="sendRequest();"
										   name="Salvar"
										   value="Salvar Cliente"/>
								</td>
							</tr>
						</table>
					</form>
				</fieldset>
			</td>
		</tr>
